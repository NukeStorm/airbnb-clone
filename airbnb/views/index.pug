extends layout
block content
  h1= title
  // 모달

  form.modal-content.animate(action='/login' method='POST')
      .container
        label(for='id')
          b ID
        input(type='text' placeholder='ID 입력' name='id' required='')
        label(for='pw')
          b Password
        input(type='password' placeholder='비밀번호 입력' name='pw' required='')
        button(type='submit') Login
        label
          input(type='checkbox' checked='checked' name='remember')
          |  로그인 유지
      .container(style='background-color:#f1f1f1')




  script.
    // Get the modal
    function modaloff(id){
      let modal = document.getElementById(id);
      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function(event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    }
    }
    modaloff('loginbtn');
