
link(rel='stylesheet' href='/stylesheets/searchbar.css')
#search_bar.search-bar
    form(action='/search' method='POST')
        input(type='text' placeholder='위치' name ='pos')
        label(for='start') 시작날짜
        input#start(type='date' name='trip-start' value='2018-07-22' min='2018-01-01')
        label(for='end') 끝날짜
        input#end(type='date' name='trip-end' value='2018-07-22' min='2018-01-01' )
        input(type='number' placeholder='인원' name='personNum')
        button(type='submit') 검색

script.
    function setCalanderSetting(){
   
        let todayStr =  new Date().toISOString().split('T')[0];
        document.getElementsByName("trip-start")[0].setAttribute("value", todayStr);
        document.getElementsByName("trip-start")[0].setAttribute("min", todayStr);
        document.getElementsByName("trip-end")[0].setAttribute("value", todayStr);
        document.getElementsByName("trip-end")[0].setAttribute("min", todayStr);

    }
    setCalanderSetting();



