extends layout
block content
  h1= title
    // 회원가입 폼
    form.modal-content(action='/signup', method='POST')
        .container
        h1 회원가입
        hr
        label(for='id')
            b ID
        input(type='text' placeholder='id 입력' name='id' required='')
        label(for='pw')
            b 비밀번호
        input(type='password' placeholder='Enter Password' name='pw' required='')
        label(for='pwr')
            b 비밀번호 재입력
        input(type='password' placeholder='비밀번호 재입력' name='pwr' required='')
        button.cancelbtn(type='button' onclick="document.href='/'") 취소
        button.signup(type='submit') 회원가입